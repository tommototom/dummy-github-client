<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:padding="@dimen/small_common_padding"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent">

    <ImageView
            android:id="@+id/repo_author_image_view"
            android:layout_marginRight="@dimen/small_common_padding"
            android:layout_width = "@dimen/image_size"
            android:layout_height = "@dimen/image_size"
            />

    <TextView
            android:id="@+id/repo_name_text_view"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_toRightOf="@+id/repo_author_image_view"
            android:paddingLeft="@dimen/small_common_padding"
            android:textSize="@dimen/raw_title_text_size"
            android:textColor="@color/textPrimary"
            android:lines="1"
            />

    <TextView
            android:id="@+id/repo_description"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize="@dimen/raw_common_text_size"
            android:textColor="@color/textSecondary"
            android:layout_toRightOf="@+id/repo_author_image_view"
            android:layout_below="@+id/repo_name_text_view"
            android:lines="3"
            />


	<!-- ONE BOTTOM LINE-->

    <TextView
        android:id="@+id/repo_author_name"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textSize="@dimen/raw_common_text_size"
        android:layout_alignParentBottom="true"
        android:textColor="@color/textPrimary"
        android:layout_toRightOf="@+id/repo_author_image_view"
        android:lines="1"
        />

    <TextView
            android:id="@+id/watches_count_text_view"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/raw_common_text_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

    <ImageView
            android:id="@+id/repo_watches_count_iv"
            android:layout_width = "@dimen/repo_icon_size"
            android:layout_height = "@dimen/repo_icon_size"
            android:src="@drawable/ic_waatch"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/watches_count_text_view"
            />

    <TextView
        android:id="@+id/forks_count_text_view"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/raw_common_text_size"
        android:layout_alignParentBottom="true"
        android:paddingRight="8dp"
        android:layout_toLeftOf="@id/repo_watches_count_iv"
        />

    <ImageView
            android:id="@+id/repo_forks_count_iv"
            android:layout_width = "@dimen/repo_icon_size"
            android:layout_height = "@dimen/repo_icon_size"
            android:src="@drawable/ic_fork"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/forks_count_text_view"
            />

</RelativeLayout>